<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_size"
    android:background="@color/colorPrimary"
    android:paddingTop="@dimen/drawer_header_padding"
    android:paddingBottom="@dimen/drawer_header_padding" >

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:contentDescription="@string/app_name"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/text_name_drawer"
        android:textColor="@android:color/white"
        android:textSize="@dimen/drawer_header_title"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textStyle="bold"/>

</LinearLayout>